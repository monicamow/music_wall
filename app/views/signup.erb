<div style="margin: 10px">

<h1>Sign Up Page</h1>

<form method="post" action="/signup">

  <div class="form-group">
    <label>First Name:</label>
    <br>
    <input type="text" name="first_name" value="<%= @new_user.first_name %>"">
  </div>

  <div class="form-group">
    <label>Last Name:</label>
    <br>
    <input type="text" name="last_name" value="<%= @new_user.last_name %>"">
  </div>

  <div class="form-group">
    <label>username:</label>
    <br>
    <input type="text" name="username" value="<%= @new_user.username %>"">
  </div>

  <div class="form-group">
    <label>Email:</label>
    <br>
    <input type="text" name="email" value="<%= @new_user.email %>"">
  </div>  
  <div class="form-group">
    <label>Password:</label>
    <br>
    <input type="password" name="password" value="<%= @new_user.password %>"">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

</form>

</div>