<div style="margin: 10px">

<form>
  <div class="form-group">
    <label>Add Review:</label>
    <br>
    <input type="text">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

  <h2 style="color: #ff014e"><%= @track.song_title %> <small style="color: #000000">(by: <%= @track.author %>)</small></h2>
  <small style="color: #0000CC">(time: <%= @track.created_at %>)</small>

  <hr>
  <h3>Reviews</h3>
  <p>
  <% @track.reviews.each do |review| %>
    <small>(time: <%= review.created_at %>)</small> - <%= review.user_review %>
  <% end %>
  </p>

<hr>
<a href='/tracks'>Back to All Tracks</a>
</div>
